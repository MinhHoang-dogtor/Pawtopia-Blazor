@page "/messi"
@using Pawtopia.Ui.Components.Variants
@rendermode InteractiveAuto

<PageTitle>Messi</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<Button Variant="ButtonVariant.Primary" OnClick="IncrementCount">
    Click me
</Button>

<h1>We had...</h1>

@if (currentCount < 10)
{
    @for (int i = 0; i < currentCount; ++i)
    {
        <img src="@Assets["assets/images/images.jpg"]" />
    }
}
else
{
    <img src="@Assets["assets/images/images.jpg"]"
         class="w-dvw h-dvh object-cover block" />
}

@code {
    private int currentCount = 1;

    private void IncrementCount()
    {
        currentCount++;
    }
}
