@page "/admin/orders/{OrderId}"
@using System.Net.Http.Json
@using System.Text.Json
@inject HttpClient Http
@inject NavigationManager NavManager

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">Chi tiết Đơn hàng #@OrderId</h3>
        <a href="/admin" class="btn btn-outline-secondary">⬅ Quay lại danh sách</a>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status"></div>
            <span class="ms-2">⏳ Đang tải dữ liệu...</span>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger shadow-sm">❌ @errorMessage</div>
    }
    else if (orderDetails is not null)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4 shadow-sm border-0">
                    <div class="card-header bg-white py-3 fw-bold text-secondary">Sản phẩm đã đặt (@(orderDetails.Items?.Count ?? 0))</div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in orderDetails.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(string.IsNullOrEmpty(item.Image) ? "/images/no-image.png" : item.Image)" class="rounded me-3 border" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='/images/no-image.png'" />
                                                <span class="fw-bold">@item.ProductName</span>
                                            </div>
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.Price.ToString("N0") đ</td>
                                        <td class="text-end fw-bold">@item.Total.ToString("N0") đ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light fw-bold text-secondary">🚚 Thông tin Giao hàng</div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="text-muted small d-block">Người nhận</label>
                                <span class="fw-bold text-primary">@orderDetails.CustomerName</span>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small d-block">SĐT</label>
                                <span class="fw-bold">@orderDetails.CustomerPhone</span>
                            </div>
                        </div>
                        <p class="mb-0 p-3 border rounded bg-light">@orderDetails.ShippingAddress</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-header bg-primary text-white fw-bold">Quản lý trạng thái</div>
                    <div class="card-body py-4">
                        <label class="form-label fw-bold small text-secondary">CHỌN TRẠNG THÁI MỚI:</label>
                        <select class="form-select border-primary mb-3" @bind="selectedStatus">
                            @foreach (var s in StatusLabels)
                            {
                                <option value="@s.Key">@s.Value</option>
                            }
                        </select>
                        
                        <button class="btn btn-primary w-100 fw-bold shadow-sm" @onclick="UpdateStatusAsync" disabled="@isSaving">
                            @if (isSaving) {
                                <span class="spinner-border spinner-border-sm"></span> <span> Đang lưu...</span>
                            } else {
                                <span>💾 LƯU THAY ĐỔI</span>
                            }
                        </button>
                    </div>
                </div>
                
                @if (showSuccessMessage) {
                    <div class="alert alert-success border-0 shadow-sm animate__animated animate__fadeIn">
                        ✅ Đã cập nhật vào Database!
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public string OrderId { get; set; } = "";
    private OrderDetailDto? orderDetails;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool showSuccessMessage = false;
    private string? errorMessage;
    private string? selectedStatus;

    // Lớp DTO định nghĩa tại đây để sửa lỗi "Not Found"
    public class OrderDetailDto {
        public string Id { get; set; } = "";
        public string Status { get; set; } = "";
        public string PaymentStatus { get; set; } = "";
        public bool IsPaid { get; set; }
        public string CustomerName { get; set; } = "";
        public string CustomerPhone { get; set; } = "";
        public string ShippingAddress { get; set; } = "";
        public decimal TotalAmount { get; set; }
        public List<OrderItemDto> Items { get; set; } = new();
    }

    public class OrderItemDto {
        public string ProductName { get; set; } = "";
        public double Price { get; set; }
        public int Quantity { get; set; }
        public decimal Total { get; set; }
        public string? Image { get; set; }
    }

    private readonly Dictionary<string, string> StatusLabels = new() {
        { "Pending", "Chờ xác nhận" }, 
        { "Shipping", "Đang giao hàng" }, 
        { "Completed", "Hoàn thành" }, 
        { "Cancelled", "Đã hủy" }
    };

    protected override async Task OnInitializedAsync() => await LoadOrderDetailsAsync();

    private async Task LoadOrderDetailsAsync() {
        isLoading = true;
        try {
            var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
            orderDetails = await Http.GetFromJsonAsync<OrderDetailDto>($"api/admin/orders/{OrderId}", options);
            if (orderDetails != null) selectedStatus = orderDetails.Status;
        } catch (Exception ex) { errorMessage = $"Lỗi tải dữ liệu: {ex.Message}"; }
        finally { isLoading = false; }
    }

    // HÀM LƯU THỰC TẾ (Sửa lỗi bấm không được)
    private async Task UpdateStatusAsync() {
        if (string.IsNullOrEmpty(selectedStatus)) return;
        isSaving = true;
        errorMessage = null;
        try {
            var response = await Http.PutAsJsonAsync($"api/admin/orders/{OrderId}/status", selectedStatus);
            if (response.IsSuccessStatusCode) {
                showSuccessMessage = true;
                StateHasChanged();
                await Task.Delay(2000);
                showSuccessMessage = false;
            } else { errorMessage = "Không thể lưu trạng thái đơn hàng."; }
        } catch (Exception ex) { errorMessage = $"Lỗi kết nối: {ex.Message}"; }
        finally { isSaving = false; }
    }

    private string GetPaymentStatusLabel(string? s) => s == "Paid" ? "Đã thanh toán" : "Chờ thanh toán";
}