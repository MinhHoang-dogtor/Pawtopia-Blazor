@inherits LayoutComponentBase
@layout Pawtopia.Components.Layout.MainLayout

@* Thay py-10 bằng pt-2 để đẩy sát lên trên, pb-8 để giữ khoảng cách phía dưới *@
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-2 pb-8">
    
    @* Giảm mb-8 xuống mb-4 để tiêu đề gần với nội dung hơn *@
    <div class="mb-4">
        <h1 class="text-3xl font-bold text-gray-900">Quản lý tài khoản</h1>
        <p class="mt-1 text-sm text-gray-500">Thay đổi cài đặt và bảo mật cho tài khoản của bạn.</p>
    </div>

    @* Sử dụng items-start để các cột không bị kéo giãn chiều cao *@
    <div class="flex flex-col lg:flex-row gap-8 items-start">
        <aside class="w-full lg:w-64 flex-shrink-0">
            @* top-2 để menu dính sát phía trên khi cuộn *@
            <div class="bg-white shadow rounded-lg p-4 sticky top-2">
                <ManageNavMenu />
            </div>
        </aside>

        <main class="flex-1 bg-white shadow rounded-lg p-6 lg:p-8">
            @Body
        </main>
    </div>
</div>