<StatusMessage Message="@StatusMessage" />

<div class="bg-white">
    <div class="border-l-4 border-yellow-400 bg-yellow-50 p-4 mb-6">
        <div class="flex">
            <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">Lưu ý quan trọng</h3>
                <div class="mt-2 text-sm text-yellow-700">
                    <p><strong>Hãy lưu các mã này ở nơi an toàn.</strong></p>
                    <p>Nếu mất thiết bị và không có mã khôi phục, bạn sẽ mất quyền truy cập tài khoản vĩnh viễn.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-6">
        @foreach (var recoveryCode in RecoveryCodes)
        {
            <div class="relative flex items-center justify-center rounded-md border border-gray-300 bg-gray-50 px-4 py-3 shadow-sm">
                <code class="text-lg font-mono font-bold text-gray-900 tracking-wider">@recoveryCode</code>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public string[] RecoveryCodes { get; set; } = [];
    [Parameter] public string? StatusMessage { get; set; }
}