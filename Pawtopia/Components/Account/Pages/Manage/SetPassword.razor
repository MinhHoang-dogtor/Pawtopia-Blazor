@page "/Account/Manage/SetPassword"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using Pawtopia.Data
@using Pawtopia.Models

@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Thiết lập mật khẩu - Pawtopia</PageTitle>

<div class="max-w-2xl mx-auto font-sans">
    <div class="border-b border-gray-200 pb-5 mb-6">
        <h3 class="text-2xl font-bold leading-6 text-gray-900">Thiết lập mật khẩu</h3>
        <p class="mt-2 text-sm text-gray-500">
            Bạn đang đăng nhập bằng tài khoản ngoài và chưa có mật khẩu cục bộ. Hãy thiết lập mật khẩu để có thể đăng nhập trực tiếp.
        </p>
    </div>

    <StatusMessage Message="@message" />

    <div class="bg-white shadow-sm border border-gray-100 rounded-xl overflow-hidden">
        <div class="p-8">
            <EditForm Model="Input" FormName="set-password" OnValidSubmit="OnValidSubmitAsync" method="post" class="space-y-6">
                <DataAnnotationsValidator />
                <div class="space-y-4">
                    <div>
                        <label for="new_password" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu mới</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                            </div>
                            <InputText type="password" @bind-Value="Input.NewPassword" id="new_password" 
                                class="block w-full rounded-lg border-gray-300 bg-gray-50 pl-10 px-4 py-3 text-gray-900 focus:border-green-500 focus:bg-white focus:ring-green-500 sm:text-sm transition-all shadow-sm outline-none border" 
                                autocomplete="new-password" placeholder="Nhập mật khẩu mới" />
                        </div>
                        <ValidationMessage For="() => Input.NewPassword" class="mt-1 text-xs text-red-500" />
                    </div>

                    <div>
                        <label for="confirm_password" class="block text-sm font-medium text-gray-700 mb-1">Xác nhận mật khẩu</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <InputText type="password" @bind-Value="Input.ConfirmPassword" id="confirm_password" 
                                class="block w-full rounded-lg border-gray-300 bg-gray-50 pl-10 px-4 py-3 text-gray-900 focus:border-green-500 focus:bg-white focus:ring-green-500 sm:text-sm transition-all shadow-sm outline-none border" 
                                autocomplete="new-password" placeholder="Nhập lại mật khẩu" />
                        </div>
                        <ValidationMessage For="() => Input.ConfirmPassword" class="mt-1 text-xs text-red-500" />
                    </div>
                </div>

                <div class="pt-4">
                    <button type="submit" class="flex w-full justify-center rounded-full bg-[#c26d48] px-4 py-3 text-sm font-bold text-white shadow-md hover:bg-[#a65d3d] focus:outline-none focus:ring-2 focus:ring-[#c26d48] focus:ring-offset-2 transition-all transform hover:-translate-y-0.5 active:scale-95">
                        Xác nhận thiết lập
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private string? message;
    private User? user;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        Input ??= new();

        user = await UserManager.GetUserAsync(HttpContext.User);
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }

        var hasPassword = await UserManager.HasPasswordAsync(user);
        if (hasPassword)
        {
            RedirectManager.RedirectTo("Account/Manage/ChangePassword");
        }
    }

    private async Task OnValidSubmitAsync()
    {
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }

        var addPasswordResult = await UserManager.AddPasswordAsync(user, Input.NewPassword!);
        if (!addPasswordResult.Succeeded)
        {
            message = $"Lỗi: {string.Join(",", addPasswordResult.Errors.Select(error => error.Description))}";
            return;
        }

        await SignInManager.RefreshSignInAsync(user);
        RedirectManager.RedirectToCurrentPageWithStatus("Mật khẩu của bạn đã được thiết lập thành công.", HttpContext);
    }

    private sealed class InputModel
    {
        [Required(ErrorMessage = "Vui lòng nhập mật khẩu mới")]
        [StringLength(100, ErrorMessage = "{0} phải có độ dài từ {2} đến {1} ký tự.", MinimumLength = 6)]
        [DataType(DataType.Password)]
        [Display(Name = "Mật khẩu mới")]
        public string? NewPassword { get; set; }

        [DataType(DataType.Password)]
        [Display(Name = "Xác nhận mật khẩu mới")]
        [Compare("NewPassword", ErrorMessage = "Mật khẩu xác nhận không khớp.")]
        public string? ConfirmPassword { get; set; }
    }
}