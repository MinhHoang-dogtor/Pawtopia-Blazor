@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col bg-gray-50 font-sans text-gray-900">
    
    <Navigation />

    <main class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @Body
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-sm text-gray-500">
                &copy; 2025 Pawtopia. All rights reserved.
            </p>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet class="hidden fixed bottom-0 w-full bg-yellow-100 border-t border-yellow-200 p-4 text-yellow-900 z-50">
    An unhandled error has occurred.
    <a href="." class="underline font-bold text-yellow-800 hover:text-yellow-900">Reload</a>
    <span class="dismiss cursor-pointer float-right font-bold px-2" onclick="document.getElementById('blazor-error-ui').style.display='none'">🗙</span>
</div>